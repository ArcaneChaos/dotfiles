# Navigation
alias l='ls -F'
alias la='ls -AF'
alias d='df -h'

# Tools
alias dus='du -sh'
alias gdb='gdb -q'
alias v='vim'
alias gv='gvim'
alias vc='vim -u NONE' # "clean" vim, run without config
alias grep='grep --color=auto'

# Apt
alias ac='apt-cache'
alias ap='aptitude'
alias ag='ag'
alias aps='apt-cache search'
alias ud='sudo aptitude update && sudo aptitude upgrade'

# Various
alias hl='history|less'
alias gt='gdb -tui -nh'
alias ct='cgdb -nh'
alias py='python3' # I often mistype it as pytohn, so let's not type it at all
alias ipy='ipython3'
