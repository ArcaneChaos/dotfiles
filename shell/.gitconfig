[user]
    name = Boris Egorov
    email = egorov@linux.com
[push]
    default = simple
[tag]
    sort = version:refname
[status]
    short = true
    branch = true
[alias]
    d = diff --word-diff=color
    co = commit
    ch = checkout
    p = !git fetch && git rebase --autostash

[url "git://anongit.kde.org/"]
    insteadOf = kde:
[url "ssh://git@git.kde.org/"]
    pushInsteadOf = kde:
[url "git@git.kde.org:"]
    pushInsteadOf = kde:

[url "git://git.gnome.org/"]
    insteadOf = gnome:
[core]
    editor = vim
    excludesfile = /home/jightuse/.config/gitignore_global
[diff]
    tool = meld
[merge]
    tool = meld
[pull]
    rebase = true
[rebase]
    autostash = true
    autosquash = true
