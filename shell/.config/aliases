# Navigation
alias l='ls -F'
alias la='ls -AF'
alias d='df -h'

# Tools
alias grep='grep --color=auto'
alias dus='du -sh'
alias gdb='gdb -q'
alias vim='nvim'
alias v='vim'
alias gv='gvim'
alias vc='vim -u NONE' # "clean" vim, run without config
alias re='pkill -HUP -x'

# Apt
alias ac='apt-cache'
alias ap='aptitude'
alias ag='ag'
alias aps='apt-cache search'
alias ud='sudo aptitude update && sudo aptitude upgrade'

# Various
alias hl='history|less'
alias gt='gdb -tui -nh'
alias ct='cgdb -nh'
alias py='python3' # I often mistype it as pytohn, so let's not type it at all
alias ipy='ipython3'
alias i="ip -4 -o a|tr -s ' '|cut -d ' ' -f2,4|column -t"
alias tldr='man -s tldr'
alias g="g++ -Wall -Wextra -Weffc++ -std=c++1z -O2"
alias dmd='dmd -de -w -unittest'
alias clang='clang -fcolor-diagnostics'
alias clang++='clang++ -fcolor-diagnostics'

alias o='popd'
alias p='pushd'
alias tldr='man -s tldr'
